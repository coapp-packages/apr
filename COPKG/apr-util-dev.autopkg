@import "apu_version.inc";
@import "apu_compat.inc";
@import "outercurve.inc";

#define { 
    flavor: "${comp??vc10}"; 
    arch : "${plat??x86}";
}

package {
    name: "apr-util-dev[${flavor}]";
    version: "${apu_version}";
    arch : "${arch}";

    display-name: "apr-util developer library";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

license[BSD] {
    license: "..\apr-util\COPYING";
    license-type: "Custom BSD License";
}

requires {
    package: "apr-util[${flavor}]-${apu_version}-${Package.Architecture}-${Package.PublicKeyToken}";
    package: "apr-util-dev-common-${apu_version}-any-${Package.PublicKeyToken}";
}

metadata {  
    summary: "apr-util";
    description: @"APR-util provides various utilities built on top of APR.";
    author-version : "${author-version}";
    bug-tracker: "https://github.com/coapp-packages/apr/issues";
    stability : "0";
    licenses : {
        BSD
    };
}

developer-library[apr-util[${flavor}]] {
    libraries : {
        libs,
    };
}

files[libs] {
    root: @"..\output\${flavor}\${arch}\Release";

    include: {
        "libaprutil-1.lib",
        "apr_ldap-1.lib",
        "apr_dbd_odbc-1.lib",
    };

    trim-path: all;
};
