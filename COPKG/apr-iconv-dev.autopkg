@import "version.inc";
@import "compat.inc";
@import "outercurve.inc";

#define { 
    flavor: "${comp??vc10}"; 
    arch : "${plat??x86}";
}

package {
    name: "apr-iconv-dev[${flavor}]";
    version: "${package-version}";
    arch : "${arch}";

    display-name: "apr-iconv developer library";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

license[BSD] {
    license: "..\COPYING";
    license-type: "Custom BSD License";
}

requires {
    package: "apr-dev[${flavor}]-${apr-dep-version}-${Package.Architecture}-${apr-dep-publickeytoken}";
    package: "apr-iconv[${flavor}]-${package-version}-${Package.Architecture}-${Package.PublicKeyToken}";
    package: "apr-iconv-dev-common-${package-version}-any-${Package.PublicKeyToken}";
}

metadata {  
    summary: "apr-iconv";
    description: @"APR-iconv provides a portable iconv() implementation built on top of APR.";
    author-version : "${author-version}";
    bug-tracker: "https://github.com/coapp-packages/apr-iconv/issues";
    stability : "0";
    licenses : {
        BSD
    };
}

developer-library[apr-iconv[${flavor}]] {
    libraries : {
        libs,
    };
}

files[libs] {
    root: @"..\output-${arch}-${flavor}";

    include: {
        "libapriconv-1.lib",
        "apriconv-1.lib",
    };

    trim-path: all;
};
