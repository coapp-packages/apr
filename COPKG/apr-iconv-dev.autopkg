@import "api_version.inc";
@import "api_compat.inc";
@import "outercurve.inc";

#define { 
    flavor: "${comp??vc10}"; 
    arch : "${plat??x86}";
}

package {
    name: "apr-iconv-dev[${flavor}]";
    version: "${api_version}";
    arch : "${arch}";

    display-name: "apr-iconv developer library";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

license[BSD] {
    license: "..\apr-iconv\COPYING";
    license-type: "Custom BSD License";
}

requires {
    package: "apr-iconv[${flavor}]-${api_version}-${Package.Architecture}-${Package.PublicKeyToken}";
    package: "apr-iconv-dev-common-${api_version}-any-${Package.PublicKeyToken}";
}

metadata {  
    summary: "apr-iconv";
    description: @"APR-iconv provides a portable iconv() implementation built on top of APR.";
    author-version : "${author-version}";
    bug-tracker: "https://github.com/coapp-packages/apr-iconv/issues";
    stability : "0";
    licenses : {
        BSD
    };
}

developer-library[apr-iconv[${flavor}]] {
    libraries : {
        libs,
    };
}

files[libs] {
    root: @"..\output\${flavor}\${arch}\Release";

    include: {
        "libapriconv-1.lib",
    };

    trim-path: all;
};
