@import "version.inc" ;
@import "compat.inc";
@import "outercurve.inc" ;

package {
    name: "apr-dev-common";
    version: "${package-version}";
    arch: any;
    display-name: "apr Dev Library-common";
}

metadata {
    summary: "The apr developer library (common)";
    description: @"apr"; 
        
    icon: @"apr.png";
    
    author-version : "trunk";
    bug-tracker: "https://github.com/coapp-packages/apr/issues";
    stability : "0";
    licenses : {
        apr
    };
}

files[headers] {
    root: "..\\include";
    include: {
        "*.h"
    };
    
    trim-path:all;
}

files[headers2] {
    root: @"..\include\arch\win32";
    include: {
        "*.h"
    };
    
    trim-path: minimal;
    destination: @"arch\win32";
}

files[docs] {
    root: "..\\docs\\";
    include: {
        "*"
    };
    
    trim-path:all;
}

developer-library[apr] {
    headers: { 
        headers
        headers2
    };
    
    docs: {
        docs
    };
}