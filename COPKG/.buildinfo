@import default_tools;

default {

    //apr files
    .Copy {
        SourceFiles : {
            $(MSBuildThisFileDirectory)..\include\apr.hw,
        };
        DestinationFiles : {
            $(MSBuildThisFileDirectory)..\include\apr.h,
        };
    };
    
    //aprutil files
    .Copy {
        SourceFiles : {
            $(MSBuildThisFileDirectory)..\apr-util\include\apr_ldap.hw,
//            $(MSBuildThisFileDirectory)apu.hw,  // locally adapted file
            $(MSBuildThisFileDirectory)..\apr-util\include\apu.hw,
            $(MSBuildThisFileDirectory)..\apr-util\include\private\apu_config.hw,
            $(MSBuildThisFileDirectory)..\apr-util\include\private\apu_select_dbm.hw,
            $(MSBuildThisFileDirectory)..\apr-util\include\apu_want.hw,
        };
        DestinationFiles : {
            $(MSBuildThisFileDirectory)..\apr-util\include\apr_ldap.h,
            $(MSBuildThisFileDirectory)..\apr-util\include\apu.h,
            $(MSBuildThisFileDirectory)..\apr-util\include\private\apu_config.h,
            $(MSBuildThisFileDirectory)..\apr-util\include\private\apu_select_dbm.h,
            $(MSBuildThisFileDirectory)..\apr-util\include\apu_want.h,
        };
    };
    
    .Exec {
        Condition="Exists('$(MSBuildThisFileDirectory)packages.config')";
        Command = @"nuget install $(MSBuildThisFileDirectory)packages.config -x -OutputDirectory .\packages >nul";
    };

    ("v110, v100", "Win32, x64", "Debug,Release", "Dynamic, Static, ltcg") => {
		.PushEnvironment {};
		.LoadSystemEnvironment {};
        .SetEnvironmentFromTarget.Target = "VC_${0}_${1}";
		.Message.Text = @"



        Env:        ${0}-${1}  :  ${2}  ${3}  ${4}
        EnvExists:  $(IsEnvironmentValid)";
        
        .Exec {
            Condition="$(IsEnvironmentValid)";
            Command = @"msbuild $(MSBuildThisFileDirectory)libapr-1.vcxproj /p:PlatformToolset=${0};Platform=${1};Configuration=${2};UsesConfigurationType=${3}";
        };

        .Exec {
            Condition="$(IsEnvironmentValid)";
            Command = @"msbuild $(MSBuildThisFileDirectory)libapriconv-1.vcxproj /p:PlatformToolset=${0};Platform=${1};Configuration=${2};UsesConfigurationType=${3}";
        };

        .Exec {
            Condition="$(IsEnvironmentValid)";
            Command = @"msbuild $(MSBuildThisFileDirectory)libaprutil-1.vcxproj /p:PlatformToolset=${0};Platform=${1};Configuration=${2};UsesConfigurationType=${3}";
        };
        
        .PopEnvironment{};
	};
	
};

clean {
    .RemoveDir.Directories = @"$(MSBuildThisFileDirectory)intermediate";
};

nuke {
    .RemoveDir.Directories = @"$(MSBuildThisFileDirectory)output";
};
